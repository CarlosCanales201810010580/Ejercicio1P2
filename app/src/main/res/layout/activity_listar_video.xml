<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="uth.tarea.ejercicio2_1.ActivityListarVideo">

    <Button
        android:id="@+id/aclbtnAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11DA1A"
        android:text="Atras" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/aclSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/aclbtnVerVideo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#18DD20"
            android:text="Ver" />
    </LinearLayout>

    <VideoView
        android:id="@+id/aclVideoViwer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>